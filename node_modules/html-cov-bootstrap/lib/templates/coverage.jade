doctype html
html
  head
    title Coverage
    include script.html
    include style.html
  body
    .topbar
      .global-nav
        .global-nav-inner
          .container
            .text Coverage
    #coverage
      include menu
      h1#overview Coverage
      #stats(class=coverageClass(cov.coverage))
        .percentage #{cov.coverage | 0}%
        .sloc= cov.sloc
        .hits= cov.hits
        .misses= cov.misses
      #files
        for file in cov.files
          .file
            h2(id=file.filename)= file.filename
            #stats(class=coverageClass(file.coverage))
              .percentage #{file.coverage | 0}%
              .sloc= file.sloc
              .hits= file.hits
              .misses= file.misses

            table#source
              thead
                tr
                  th Line
                  th Hits
                  th Source
              tbody
                for line, number in file.source
                  - line.source = line.source.replace(/\/\/(.*)/gm, '<span class="comment">//$1</span>')
                  - line.source = line.source.replace(/('.*?')/gm, '<span class="string">$1</span>')
                  - line.source = line.source.replace(/(\d+\.\d+)/gm, '<span class="number">$1</span>')
                  - line.source = line.source.replace(/(\d+)/gm, '<span class="number">$1</span>')
                  - line.source = line.source.replace(/\bnew *(\w+)/gm, '<span class="keyword">new</span> <span class="init">$1</span>')
                  - line.source = line.source.replace(/\b(function|new|throw|return|var|if|else)\b/gm, '<span class="keyword">$1</span>')
                  if line.coverage > 0
                    tr.hit
                      td.line= number
                      td.hits= line.coverage
                      td.source
                        != line.source
                  else if 0 === line.coverage
                    tr.miss
                      td.line= number
                      td.hits 0
                      td.source
                        != line.source
                  else
                    tr
                      td.line= number
                      td.hits
                      td.source
                        != line.source || ''

